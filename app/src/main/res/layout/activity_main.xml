<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zby.drawableview.DrawableTextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@mipmap/ic_launcher"
        android:drawableEnd="@mipmap/ic_launcher"
        android:drawableRight="@mipmap/ic_launcher"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Hello World!"
        android:textColor="#FFFFFF"
        app:cornerRadius="10dp"
        app:drawableRightHeight="50dp"
        app:drawableRightWidth="50dp"
        app:solidColor="@color/colorPrimaryDark"
        app:strokeColor="@color/colorAccent"
        app:strokeWidth="3dp"
        app:touchSolidColor="@color/colorAccent"
        app:touchTextColor="#FF5722" />


    <com.zby.drawableview.DrawableView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        app:gradientCenterColor="#88000000"
        app:gradientEndColor="#ff000000"
        app:gradientOrientation="TOP_BOTTOM"
        app:gradientStartColor="#00000000" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="click me" />

</FrameLayout>